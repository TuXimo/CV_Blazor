@using CV_Blazor.Services
@using System.Globalization

@inject IJSRuntime JSRuntime
@inject IStringLocalizer<Resources> Localizer
@inject NavigationManager NavigationManager
@inject LocalizationService LocService

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="#top">Máximo Brunetti</a>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#about-me">@Localizer["nav_AboutMe"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#resume">@Localizer["nav_Resume"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#skills">@Localizer["nav_Skills"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#projects">@Localizer["nav_Projects"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#contact">@Localizer["nav_Contact"]</a>
                </li>
            </ul>
            <div class="d-flex align-items-center ms-auto">
                <button class="btn btn-sm btn-outline-secondary me-2" @onclick="ChangeLanguage">
                    @CurrentLanguageName
                </button>
                <button class="btn btn-sm btn-outline-secondary" @onclick="ToggleTheme">
                    @Localizer["nav_DarkMode"]
                </button>
            </div>
        </div>
    </div>
</nav>

@code {
    private string CurrentLanguageName =>
        CultureInfo.CurrentUICulture.Name == "es-ES" ? "English" : "Español";

    private async Task ChangeLanguage()
    {
        var currentCulture = CultureInfo.CurrentUICulture.Name;
        var newCulture = currentCulture == "es-ES" ? "en-US" : "es-ES";

        // guardo en localStorage
        await JSRuntime.InvokeVoidAsync("blazorCulture.set", newCulture);

        // cambio cultura en caliente
        LocService.SetCulture(newCulture);
    }

    private void ToggleTheme()
    {
        // cambiar tema
    }
}
